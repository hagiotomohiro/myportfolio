        },
        {
          "groupName": "Other",
          "properties": [
            "counter-increment",
            "counter-reset",
            "visibility",
            "filter",
            "resize",
            "cursor",
            "pointer-events",
            "fill",
            "stroke"
          ]
        }
      ],
      {
        "unspecified": "bottom",
				"severity": "warning"
      }
    ]
  }
}